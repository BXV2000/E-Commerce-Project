@model IEnumerable<ECommerce.SharedDataModels.VegetableDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="homepage-container">
    <div class="homepage-header-container">
        <div class="homepage-header">
            <div class="homepage-header-text">
                <div class="homepage-header-text-wrapper">
                    <img src="/Images/HomepageTextImg.png" />
                    <h1>Choosing The Right Nutrition</h1>
                    <p>With an emphasis on Organic and Local, we do as little conventional shopping as possible. We are always open to suggestions.</p>
                    <a class="button" asp-controller="Shop" asp-action="Index">BUY NOW</a>
                </div>
            </div>
            <div class="homepage-header-img">
                <img src="/Images//HomepageImg.png"/>
            </div>
        </div>
    </div>
    <div class="homepage-best-seller">
        <div class="homepage-best-seller-text">
            <h2 >- power of nature -</h2>
            <h1>Best Sellers Products</h1>
            <p>We support environmental awareness, just business practices, and health, and our selections illustrate that.</p>
        </div>
        <div class="homepage-products">
            <div class="best-seller-row">
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <div class="product">
                            @if (!item.Images.Any())
                            {
                                <img src="/Images//ProductDummy.jpg" />
                            }
                            else{
                             <img src="@item.Images[0].ImageURL/@item.Images[0].Id" />
                            }
                            <p class="product-name">@item.Name</p>
                            <p>@item.Price</p>
                            <div class="product-btns">
                                <a class="button" asp-controller="Shop" asp-action="Detail" asp-route-id="@item.Id">SEE DETAIL</a>
                                <a class="button">ADD TO CART</a>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="homepage-best-seller-btns"><a class="button" asp-controller="Shop" asp-action="Index">SEE MORE</a></div>
        </div>
    </div>
</div>