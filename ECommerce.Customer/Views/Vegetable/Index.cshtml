@model IEnumerable<ECommerce.SharedDataModels.VegetableDTO>

@{
    ViewData["Title"] = "Vegetable";
}

<h2>Vegetables</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Id
            </th>
            <th>
                Price
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.CategoryId
                    </td>
                    <td>
                        @item.Price
                    </td>
                    @*                <td>    
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>*@
                </tr>
            }
        }
    </tbody>
</table>